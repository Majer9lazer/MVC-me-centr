@using MedCentr.Models.Model
@model IEnumerable<MedCentr.Models.Model.Patient>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patronomic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IIN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber_)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Med_Organization.Name)
        </th>
        <th></th>
    </tr>

@foreach (Patient item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patronomic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IIN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber_)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Med_Organization.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PatientId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PatientId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PatientId })
        </td>
    </tr>
}

</table>
